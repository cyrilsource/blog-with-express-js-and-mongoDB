<h1 class="text-center">{{title}}</h1>
<p class="text-center">Welcome to {{title}}</p>

<a href="/admin/addPost" class="center btn btn-primary btn-lg active mb-3" role="button" aria-pressed="true">Add a Post</a>

<table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">Thumbnail</th>
              <th scope="col">Title</th>
              <th scope="col">Category</th>
              <th scope="col">Slug</th>
              <th scope="col">Edit</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            {{# each content }}
              <tr>
                  <td><a href="/admin/deleteImage/{{ _id }}"><img style="width: 150px" src="{{ thumbnail }}" alt="" title="change the picture"></a></td>
                  <td>{{ title }}</td>
                  <td>{{ category }}</td>
                  <td>{{ slug }}</td>
                  <td><a href="/admin/editPost/{{ _id }}" class="btn btn-info" role="button" aria-pressed="true">Edit a Post</a></td>
                  <td>
                    <form action="/admin/home/{{ _id }}" method="post">
                      <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                  </td>
              </tr>
            {{/each}}
            <tr>
            </tr>
          </tbody>
        </table>
